@model Qurbanet.Models.DTOs.Payment.CreatePaymentDto
@{
    ViewData["Title"] = "Add Payment";
}
<h1>Add Payment</h1>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="SaleId" />
    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
