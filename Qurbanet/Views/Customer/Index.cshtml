@model IEnumerable<Qurbanet.Models.DTOs.Customer.CustomerListDto>
@{
    ViewData["Title"] = "Customers";
}
<h1>Customers</h1>
<table class="table">
    <thead>
        <tr><th>Name</th><th>Phone</th><th></th></tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.FullName</td>
            <td>@item.PhoneNumber</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Create" class="btn btn-success">Add Customer</a>
